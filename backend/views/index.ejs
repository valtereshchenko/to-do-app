<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <title>ToDoList</title>
</head>
<body>
    
    <div class="container">
        <h2>A Simple To Do List App</h2>
        <form action="http://localhost:3001/tasks" method="post" id="formTasks">
            <input type="text" name="newTask" placeholder="add a new task">
            <button type="submit">Add task</button>
        </form>

        <div id="tasks">
            
                <ul>
                  <% for (let i = 0; i < task.length; i++) { %>
                    <div class="task">
                        <span>
                            <input type= checkbox value=<%=task[i]._id %>><%=task[i].text %> 
                        </span>
                    
                    </div>
                  <%}%>
        </div>

        <div id="buttons">
            <button onclick=deleteTask()>Delete Task</button>
            <button onclick=deleteAllTasks()>Delete All</button>
        </div>
        <form action="/auth/logout?_method=DELETE" method="POST">
            <button type="submit">Log Out</button>
        </form>
    </div>
    <script>
        function deleteTask(){
            
            let selectedTasks = document.querySelectorAll('input[type=checkbox]:checked');
            let tasksToDelete = []
            for (task of selectedTasks){
                tasksToDelete.push(task.value)
            }
            
            console.log(tasksToDelete)

            fetch(`/tasks`, {
            method: "DELETE",
            headers: {"Content-Type": "application/json"},
            body: JSON.stringify({ids: tasksToDelete})})
            .then(response => response.json())
            .then(data => {
                if(data.success){
                    window.location.reload();
                }
            })
        }

        function deleteAllTasks(){
            
            fetch('/tasks/deleteAll', {
            method: "DELETE"})
            .then(response => response.json())
            .then(data => {
                if(data.success){
                    window.location.reload();
                }
            })
            .catch(error => {
                console.log(error)
            })
        }
        
        
    </script>
</body>
</html>